{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "#config/*": [
        "src/config/*"
      ],
      "#logger/*": [
        "src/logger/*"
      ],
      "#middleware/*": [
        "src/middleware/*"
      ],
      "#modules/*": [
        "src/modules/*"
      ],
      "#utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}